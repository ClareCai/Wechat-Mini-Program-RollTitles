/* pages/play.wxss */
.play-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  padding: 0;
  margin: 0;
  overflow: hidden;
}
.play-text {
  width: fit-content;
  transform-origin: 0 50% 0;
  transform: rotate(90deg) translate(-110%, -50vw);
  animation: move 8s infinite linear;
  white-space: nowrap;
}

@keyframes move {
  0% {
    transform: rotate(90deg) translate(101vh, -50vw);
  }
  100% {
    transform: rotate(90deg) translate(-110%, -50vw);
  }
}

.back-btn {
  position: absolute !important;
  bottom: 100rpx;
  left: 20rpx;
  transform: rotate(90deg);
  color: #ffffff !important;
}